%div.row
  %h2 Edit your Profile
  %div.large-12.columns
    %div.devise-form
      = form_for current_user do |f|
        %h3 Edit your user info:
        .field
          = f.label :name
          = f.text_field :name, autofocus: true, placeholder: 'Enter your name...'
        .actions
          = f.submit 'Save', class: 'button small radius'
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
        = devise_error_messages!
        %h3 Edit your account credentials:
        .field
          = f.label :email
          = f.email_field :email, placeholder: 'Enter your email...'
        - if devise_mapping.confirmable? && resource.pending_reconfirmation?
          %div
            Currently waiting confirmation for: #{resource.unconfirmed_email}
        .field
          = f.label :password
          = f.password_field :password, autocomplete: "off", placeholder: "Leave blank if you don't want to change it..."
        .field
          = f.label :password_confirmation
          = f.password_field :password_confirmation, autocomplete: "off"
        .field
          = f.label :current_password
          = f.password_field :current_password, autocomplete: "off", placeholder: 'We need your current password to confirm your changes...'
        .actions
          = f.submit "Save", class: 'button small radius'
      %h3 Cancel my account
      %p Unhappy?
      = link_to 'Cancel my account', registration_path(current_user), method: :delete, class: 'button small radius alert'
      = link_to "Back", :back

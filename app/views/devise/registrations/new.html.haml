%div.row
  %h2 Sign Up
  %div.large-12.columns
    %div.devise-form
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        .field
          = f.label :name
          = f.text_field :name, autofocus: true, placeholder: 'Enter your name...'
        .field
          = f.label :email
          = f.email_field :email, placeholder: 'Enter your email address...'
        .field
          = f.label :password
          = f.password_field :password, autocomplete: "off", placeholder: 'Enter a password (minimum of 8 characters)...'
        .field
          = f.label :password_confirmation
          = f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Enter a password confirmation...'
        .actions
          = f.submit "Sign Up", class: 'button small radius'
      = render "devise/shared/links"
